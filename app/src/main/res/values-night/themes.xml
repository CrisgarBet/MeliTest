<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MeliTest" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:statusBarColor">@color/yellow_meli</item>
    </style>

    <style name="Theme.MeliTest" parent="Base.Theme.MeliTest" />

    <style name="progressBarMeli">
        <item name="colorAccent">@color/yellow_meli</item>
    </style>

    <style name="Theme.app.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/yellow_meli</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/meli</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.MeliTest</item>
    </style>

    <style name="AppTheme.RoundedCornerMaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_shape</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="quantity" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_shape_quantity</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="AppTheme.RoundedCornerMaterialButtonCart" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_shape_cart</item>
        <item name="android:textColorPrimary">@color/blue_meli</item>
    </style>
</resources>